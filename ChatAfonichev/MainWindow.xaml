<Window x:Class="ChatAfonichev.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChatAfonichev"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="400">
    <Grid>
        <StackPanel>
            <TextBox x:Name="LoginTb"
                       Text="Введите логин"
                     GotFocus="LoginTbGotFocus"
                     LostFocus="LoginTbLostFocus"/>
            
            <TextBox x:Name="PassTb"
                       Text="Введите пароль"
                     GotFocus="PassTbGotFocus"
                     LostFocus="PassTbLostFocus"/>
            
            <CheckBox x:Name="RememberCheck"
                      Content="Запомнить меня"/>
            
            <Button x:Name="EnterBtn"
                    Content="Войти"
                    Click="EnterBtnClick"/>
            
            <Button x:Name="ExitBtn"
                    Content="Выйти"/>
        </StackPanel>
    </Grid>
</Window>
